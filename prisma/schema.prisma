datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Episode {
  id                    String   @id @default(cuid())
  trackName             String
  collectionName        String?
  artworkUrl60          String?
  artworkUrl160         String?
  releaseDate           DateTime?
  trackTimeMillis       Int?
  searchTerm            String
  createdAt             DateTime @default(now())
 
  @@index([searchTerm])
}

model Podcast {
  id                    String   @id @default(cuid())
  trackName             String
  artistName            String?
  artworkUrl100         String?
  artworkUrl600         String?
  collectionName        String?
  searchTerm            String
  createdAt             DateTime @default(now())

  @@index([searchTerm])
}